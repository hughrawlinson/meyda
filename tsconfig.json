{
  "exclude": ["dist"],
  "compilerOptions": {
		"outDir": "./typescript-built",
		"allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
